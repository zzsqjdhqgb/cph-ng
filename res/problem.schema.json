{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Problem",
    "type": "object",
    "definitions": {
        "TCVerdict": {
            "title": "TCVerdict",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "fullName": {
                    "type": "string"
                },
                "color": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "fullName",
                "color"
            ],
            "additionalProperties": false
        },
        "FileWithHash": {
            "title": "FileWithHash",
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "hash": {
                    "type": "string",
                    "minLength": 64,
                    "maxLength": 64
                }
            },
            "required": [
                "path"
            ],
            "additionalProperties": false
        },
        "TCIO": {
            "title": "TCIO",
            "oneOf": [
                {
                    "properties": {
                        "useFile": {
                            "type": "boolean",
                            "const": true
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "useFile",
                        "path"
                    ],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "useFile": {
                            "type": "boolean",
                            "const": false
                        },
                        "data": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "useFile",
                        "data"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "TCResult": {
            "title": "TCResult",
            "type": "object",
            "properties": {
                "verdict": {
                    "$ref": "#/definitions/TCVerdict"
                },
                "memory": {
                    "type": "number"
                },
                "time": {
                    "type": "number"
                },
                "stdout": {
                    "$ref": "#/definitions/TCIO"
                },
                "stderr": {
                    "$ref": "#/definitions/TCIO"
                },
                "msg": {
                    "type": "string"
                }
            },
            "required": [
                "verdict",
                "time",
                "stdout",
                "stderr",
                "msg"
            ],
            "additionalProperties": false
        },
        "TC": {
            "title": "TC",
            "type": "object",
            "properties": {
                "stdin": {
                    "$ref": "#/definitions/TCIO"
                },
                "answer": {
                    "$ref": "#/definitions/TCIO"
                },
                "isExpand": {
                    "type": "boolean"
                },
                "result": {
                    "$ref": "#/definitions/TCResult"
                }
            },
            "required": [
                "stdin",
                "answer",
                "isExpand"
            ],
            "additionalProperties": false
        },
        "BFCompare": {
            "title": "BFCompare",
            "type": "object",
            "properties": {
                "generator": {
                    "$ref": "#/definitions/FileWithHash"
                },
                "bruteForce": {
                    "$ref": "#/definitions/FileWithHash"
                },
                "running": {
                    "type": "boolean"
                },
                "msg": {
                    "type": "string"
                }
            },
            "required": [
                "running",
                "msg"
            ],
            "additionalProperties": false
        }
    },
    "properties": {
        "version": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "url": {
            "type": "string",
            "format": "uri"
        },
        "tcs": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/TC"
            }
        },
        "timeLimit": {
            "type": "integer",
            "minimum": 1
        },
        "memoryLimit": {
            "type": "integer",
            "minimum": 1
        },
        "src": {
            "$ref": "#/definitions/FileWithHash"
        },
        "checker": {
            "$ref": "#/definitions/FileWithHash"
        },
        "interactor": {
            "$ref": "#/definitions/FileWithHash"
        },
        "bfCompare": {
            "$ref": "#/definitions/BFCompare"
        },
        "timeElapsed": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [
        "version",
        "name",
        "tcs",
        "timeLimit",
        "memoryLimit",
        "src",
        "timeElapsed"
    ],
    "additionalProperties": false
}
